    <com.example.gustaftegner.shouldwetest.CustomView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="false"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:id="@+id/country_photo"
            android:src="@drawable/heaton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/action_settings"
            android:gravity="center_horizontal"
            />





        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/relLayout"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:text="@string/hello_world"
                android:textColor="#000000"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_place_grey_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1337m"
                            android:textColor="@color/lghtred"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play_light"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19:00-03:00"
                            android:textColor="@color/lghtred"/>

                    </LinearLayout>

                </LinearLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_text"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_gravity="end"
                android:text="Rating ikvÃ¤ll"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="3"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"

                android:layout_marginRight="8dp"

                />



            <!-- android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" -->
            </RelativeLayout>




    </RelativeLayout>



</com.example.gustaftegner.shouldwetest.CustomView>